@model Product

<h1>Produto</h1>
<a href="/Product">Voltar</a>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Name)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.OriginalPrice)
            </th>
            <th>
                Está em Promoção
            </th>
        </tr>
    </thead>
    <tbody>
        <tr>
            <td>
                @Html.DisplayFor(modelItem => Model.Name)
            </td>
            <td>
                @Html.DisplayFor(modelItem => Model.OriginalPrice)
            </td>
            <td>
                @(Model.Promotion != null ? "Sim" : "Não")
            </td>
        </tr>
    </tbody>
</table>